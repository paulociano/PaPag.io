@model papagio.Models.Usuario

@{
    ViewData["Title"] = "PaPag.io - Home";

}

<div class="containerHome">

    <section id="banners" class="leftHome">
        @*Carrossel de Banners*@
        <div id="carrosselBanners" class="carousel slide" data-ride="carousel" data-interval="3000">
            <ol class="carousel-indicators">
                <li data-target="#carrosselBanners" data-slide-to="0" class="active"></li>
                <li data-target="#carrosselBanners" data-slide-to="1"></li>
                <li data-target="#carrosselBanners" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/img/banner1.png" alt="Logo do APP">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/banner2.png" alt="Funcionalidades">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/img/banner3.png" alt="Categorias">
                </div>
            </div>
        </div>
    </section>

    @*Seção de Login*@
    <section id="login" class="rightHome">
        <img class="logo" src="~/img/logo.svg" />
        <div class="formulario">
            <form asp-controller="Login" asp-action="Logar" method="post">
                <div style="color: red">@ViewBag.ErrorLogin</div>
                <h1>Login</h1>
                <div>
                    <input type="text" placeholder="Usuário" id="username" asp-for="Login" />
                </div>
                <div style="color: red">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div>
                    <input type="password" placeholder="Senha" id="password" asp-for="Senha" />
                </div>
                <div style="color: red">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <div>
                    <button class="btn-primary" type="submit">Logar</button>
                </div>
            </form>
        </div>
    </section>
</div>
